<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.parse.starter.ProfilePageActivity"
    android:background="@color/primary_color"
    android:weightSum="1"
    >

    <TableRow>
        <TextView
            android:text="Profile Photo"
            android:padding="15dip" />

    </TableRow>

    <TableRow>
        <TextView
            android:text="First Name"
            android:padding="15dip" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/firstName"
            android:layout_column="1" />

    </TableRow>

    <TableRow>
        <TextView
            android:text="Last Name"
            android:padding="15dip" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/lastName"
            android:layout_column="1" />

    </TableRow>
    <TableRow>
        <TextView
            android:text="Gender"
            android:padding="15dip" />

        <Spinner
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/gender_spinner"
            android:layout_column="1"
            android:entries="@array/gender_items"/>

    </TableRow>

    <TableRow>
        <TextView
            android:text="Gender Interested In"
            android:padding="15dip" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Male"
            android:id="@+id/male_checkBox"
            android:layout_column="1"
            android:onClick="onCheckboxClicked"
            />


    </TableRow>

    <TableRow>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Female"
            android:id="@+id/female_checkBox"
            android:layout_column="1"
            android:onClick="onCheckboxClicked"
            />
    </TableRow>

    <TableRow>
        <TextView
            android:text="Age"
            android:padding="15dip" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/age"
            android:layout_column="1" />

    </TableRow>

    <TableRow>
        <TextView
            android:text=".edu Email"
            android:padding="15dip" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/eduEmail"
            android:layout_column="1" />
    </TableRow>

    <TableRow>
        <TextView
            android:text="Major"
            android:padding="15dip" />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/major"
            android:layout_column="1" />

    </TableRow>


    <TableRow>
        <TextView
            android:text="What's Up"
            android:padding="15dip" />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/whatsup"
            android:layout_column="1" />
    </TableRow>



</TableLayout>
